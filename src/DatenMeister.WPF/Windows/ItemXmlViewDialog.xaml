<Window x:Class="DatenMeister.WPF.Windows.ItemXmlViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Xml of item window" Height="600" Width="1000"
        WindowStartupLocation="CenterOwner" Closed="OnClosed">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Margin="10" Orientation="Horizontal" HorizontalAlignment="Right">
            <CheckBox x:Name="IgnoreIDsBtn" Click="Ignore_IDs_OnClick">Ignore the IDs</CheckBox>
            <Button x:Name="UpdateButton" Click="UpdateButton_OnClick" IsDefault="True">Update</Button>
            <Button x:Name="CloseButton" Click="CloseButton_Click" IsCancel="True">Close</Button>
        </StackPanel>
        <TextBox x:Name="XmlTextField" Margin="10" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"></TextBox>
    </DockPanel>
</Window>
