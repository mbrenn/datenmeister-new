<UserControl x:Class="DatenMeisterWPF.Forms.Base.ItemExplorerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DatenMeisterWPF.Forms.Base"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>

        <Grid x:Name="MainGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="5"></ColumnDefinition>
                <ColumnDefinition Width="80*"/>
            </Grid.ColumnDefinitions>
            <local:ItemsTreeView Grid.Row="0" Margin="10,0,10,0" x:Name="NavigationTreeView" 
                          ItemChosen="NavigationTreeView_OnItemChosen" ItemSelected="NavigationTreeView_OnItemSelected" ShowRoot="True">
            </local:ItemsTreeView>
            <GridSplitter Grid.Column="1" Width="5" Grid.Row="0"
                      HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch"></GridSplitter>
            <TabControl Grid.Column="2" x:Name="ItemTabControl" SelectionChanged="ItemTabControl_SelectionChanged"></TabControl>

        </Grid>
    </DockPanel>
</UserControl>
