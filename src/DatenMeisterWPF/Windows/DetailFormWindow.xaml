<Window xmlns:Base="clr-namespace:DatenMeisterWPF.Forms.Base"  x:Class="DatenMeisterWPF.Windows.DetailFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatenMeisterWPF.Windows"
        mc:Ignorable="d"
        Title="Der Datenmeister" Height="600" Width="1000"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="10,2,10,2"></Setter>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="10,2,10,2"></Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="10,2,10,2"></Setter>
        </Style>
        <Style TargetType="Base:ViewButton">
            <Setter Property="Margin" Value="4,2,4,2"></Setter>
            <Setter Property="Padding" Value="10,2,10,2"></Setter>
        </Style>
    </Window.Resources>
    <DockPanel>
        <ContentControl x:Name="MainContent"></ContentControl>
    </DockPanel>
</Window>
