<Window x:Class="DatenMeisterWPF.Windows.LocateItemDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatenMeisterWPF.Windows"
        xmlns:base="clr-namespace:DatenMeisterWPF.Forms.Base"
        mc:Ignorable="d"
        Title="LocateItemDialog" Height="800" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical">
            <ComboBox x:Name="cboExtents" SelectionChanged="cboExtents_SelectionChanged"></ComboBox>
        </StackPanel>
        <base:ItemsTreeView x:Name="items" Grid.Row="1" ItemDoubleClicked="Items_OnItemDoubleClicked"/>
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right">
            <Button Click="Open_Click">Open</Button>
            <Button Click="Cancel_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
