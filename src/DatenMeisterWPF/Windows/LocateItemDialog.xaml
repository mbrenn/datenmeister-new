<Window xmlns:Controls="clr-namespace:DatenMeisterWPF.Controls"  x:Class="DatenMeisterWPF.Windows.LocateItemDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatenMeisterWPF.Windows"
        xmlns:base="clr-namespace:DatenMeisterWPF.Forms.Base"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="LocateItemDialog" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Controls:LocateElementControl x:Name="LocateElementControl" />
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right">
            <Button Click="Open_Click">Open</Button>
            <Button Click="Cancel_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
