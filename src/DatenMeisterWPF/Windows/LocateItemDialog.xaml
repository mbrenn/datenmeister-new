<Window x:Class="DatenMeisterWPF.Windows.LocateItemDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatenMeisterWPF.Windows"
        xmlns:base="clr-namespace:DatenMeisterWPF.Forms.Base"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="LocateItemDialog" Height="600" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Select Extent:" />
        <StackPanel Orientation="Vertical" Grid.Row="1">
            <ComboBox x:Name="cboExtents" SelectionChanged="cboExtents_SelectionChanged"></ComboBox>
        </StackPanel>
        <TextBlock Text="Select Item:" Grid.Row="2" />
        <base:ItemsTreeView x:Name="items" Grid.Row="3" ItemChosen="Items_OnItemChosen"/>
        <StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Right">
            <Button Click="Open_Click">Open</Button>
            <Button Click="Cancel_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
