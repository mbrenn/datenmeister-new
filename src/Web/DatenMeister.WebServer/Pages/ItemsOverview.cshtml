@page "/ItemsOverview/{workspace}/{extent}/{item?}"
@namespace DatenMeister.WebServer.Pages
@using DatenMeister.Html
@model ExtentOverviewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Shared/_Layout.cshtml";
    ViewData["Title"] = "Der DatenMeister - Items Overview";
}

<h1>Items Overview</h1>
<p>Workspace: @Model.Workspace</p>
<p>Extent: @Model.Extent</p>

@foreach (var table in Model.Tables)
{
    @Html.Raw(table.ToString())
}

<script type="application/javascript">

$(function() 
{
    requirejs(['datenmeister'], function(DatenMeister) {
    
        @Html.Raw(Model.ScriptLines)
    
    })
});

</script>

<div>
    <a class="btn" data-bs-toggle="collapse" href="#forminformation" role="button">Form Information</a>
    <div class="collapse" id="forminformation">@(Html.Raw(new ObjectToSimpleHtmlListConverter().ConvertToHtmlList(Model.Form)))</div>
</div>